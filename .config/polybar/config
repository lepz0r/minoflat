[module/playerctl]
type = custom/script
interval = 1
format = <label>
exec = ~/.config/polybar/scripts/playerctl-status

[module/playerctl-prefix]
type = custom/script
interval = 1
format = <label>
exec = ~/.config/polybar/scripts/playerctl-status -s
click-left = playerctl play-pause
click-right = dunstify $(date)

[module/network]
