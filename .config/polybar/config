label-unfocused-padding = 3

index-sort = true

enable-click = true

enable-scroll = false

wrapping-scroll = false

reverse-scroll = false

fuzzy-match = true

[module/bspwm]
type = internal/bspwm
pin-workspaces = true
strip-wsnumbers = true
